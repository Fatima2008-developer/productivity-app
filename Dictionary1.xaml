<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="Primarybgd">
        #F5F7FA
    </Color>

    <SolidColorBrush x:Key="BackGround" Color="{StaticResource Primarybgd}"/>


    <Style TargetType="TextBlock" x:Key="textblock">
        <Setter Property="Background" Value="#F5F7FA"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="FontSize" Value="100"/>
        <Setter Property="Foreground" Value="#2D2D2D"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>

        <Setter Property="FontFamily" Value="Segoe UI"/>


    </Style>


    <Style TargetType="ListView" x:Key="List1">
        <Setter Property="Background" Value="#F5F7FA"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Foreground" Value="#2D2D2D"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>

        <Setter Property="BorderBrush" Value="#0078D4"/>
        <Setter Property="BorderThickness" Value="3"/>


    </Style>



    <Style TargetType="TextBlock" x:Key="textblock2">
        <Setter Property="Background" Value="#0F0E47"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="Goldenrod"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>

        <Setter Property="FontFamily" Value="Cascadia Mono"/>


    </Style>



    <!-- Style for the TabControl itself -->
    <Style TargetType="CheckBox" x:Key="Tbc">
       
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#0078D4"/>
    </Style>

    <!-- Style for each TabItem -->
    <Style TargetType="GridViewColumnHeader" x:Key="Tbcd">


        <Setter Property="FontFamily" Value="Cascadia Mono"/>


        <Setter Property="FontWeight" Value="ExtraBold"/>
        <Setter Property="Foreground" Value="#1B1F23"/>
        <Setter Property="Background" Value="#0F0E47"/>
        <Setter Property="BorderBrush" Value="#0078D4"/>
        <Setter Property="BorderThickness" Value="4"/>
    </Style>




    <Style TargetType="ScrollViewer" x:Key="Mys">
        <Setter Property="Background" Value="#0F0E47"/>
    </Style>




    <Style TargetType="Button" x:Key="mybutton">
        <Setter Property="Background" Value="#0078D4"/>
        <Setter Property="BorderBrush" Value="#0078D4"/>
        <Setter Property="BorderThickness" Value="5"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="FontSize" Value="19"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>

        <Setter Property="FontFamily" Value="Cascadia Mono"/>


        <Setter Property="FontWeight" Value="Bold"/>

        <Setter Property="Template" >
            <Setter.Value>

                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" 
                                VerticalAlignment="Center" RecognizesAccessKey="True"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="DimGray"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="LightGray" />

                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>

        </Setter>
    </Style>


    <Style TargetType="TextBox" x:Key="nametextbox">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#0078D4"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="#2b2b2b"/>
        <Setter Property="FontWeight" Value="bold"/>

        <Setter Property="FontFamily" Value="Cascadia Mono"/>


    </Style>





    <Style TargetType="TextBox" x:Key="nameTextbox">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="#0F0E47"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Template" >
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="LightGray"  CornerRadius="10" BorderThickness="3" BorderBrush="LightGray" SnapsToDevicePixels="True">
                        <ContentPresenter Margin="50,50,50,50" VerticalAlignment="Center"/>
                    </Border>


                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>






    <Style TargetType="Button" x:Key="myButton">
        <Setter Property="Background" Value="#0078D4"/>
        <Setter Property="BorderBrush" Value="#29B6F6"/>
        <Setter Property="BorderThickness" Value="4"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="29"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontWeight" Value="Bold"/>


        <Setter Property="Template" >
            <Setter.Value>

                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                   BorderBrush="{TemplateBinding BorderBrush}"
                   BorderThickness="{TemplateBinding BorderThickness}"
                   >
                        <ContentPresenter HorizontalAlignment="Center" 
                             VerticalAlignment="Center" RecognizesAccessKey="True"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="DimGray"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="LightGray" />

                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>

        </Setter>
    </Style>











</ResourceDictionary>