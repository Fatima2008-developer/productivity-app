<Window x:Class="Productivity_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Productivity_App"
        mc:Ignorable="d"
        Title="productivity app" Height="450" Width="800">
    <Grid Background="{DynamicResource BackGround}">
        <DockPanel Margin="10" Background="{DynamicResource BackGround}">
            <!-- Search bar -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10" Background="{DynamicResource BackGround}">
                <TextBox x:Name="SearchBox" Width="400" Height="35" Margin="0,0,10,0"  Style="{DynamicResource nametextbox}"
                    
                     TextChanged="SearchBox_TextChanged"/>
                <Button Content="Add Task" Width="100" Height="35" Click="Button_Click_3" Style="{DynamicResource mybutton}"/>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <!-- Task list -->
                <ListView x:Name="TaskList" Margin="0,0,0,10" SelectionMode="Single" Width="550" Style="{DynamicResource List1}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Done" Width="50">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}"  Style="{DynamicResource Tbc}"
                                          Checked="CheckBox_Checked"
                                          Unchecked="CheckBox_Unchecked"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Task" Width="300" DisplayMemberBinding="{Binding Title}" />
                            <GridViewColumn Header="Date" Width="150" DisplayMemberBinding="{Binding CreatedAt}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
            <!-- Bottom buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Margin="0,10,0,0" Background="{DynamicResource BackGround}">
                <Button Content="Edit Task" Width="199" Margin="5"  Click="Button_Click" Style="{DynamicResource mybutton}"/>
                <Button Content="Delete Task" Width="199" Margin="5" Click="Button_Click_1" Style="{DynamicResource mybutton}"/>
                <Button Content="Save Now" Width="199" Margin="5" Click="Button_Click_2" Style="{DynamicResource mybutton}"/>
                <CheckBox x:Name="themetoggle" Content="L/D" IsChecked="False" Checked="themetoggle_Checked" Style="{DynamicResource Tbc}"
                          Margin="-100,-50,0,0" Width="auto" 
                          Unchecked="themetoggle_Unchecked"/>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
